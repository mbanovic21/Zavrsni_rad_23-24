<UserControl x:Class="PreschoolManagmentSoftware.UserControls.Dashboard.ucChildrenAttendanceNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PreschoolManagmentSoftware.UserControls.Dashboard"
             mc:Ignorable="d" 
             x:Name="ucChildrenNumber"
             d:DesignHeight="450" d:DesignWidth="800" Loaded="ucChildrenNumber_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--naslov-->
        <TextBlock Text="Broj prisutne djece" Style="{StaticResource normalText}" Foreground="#4EB1B6" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="70,20,0,7"/>

        <!--broj prisutnih-->
        <TextBlock x:Name="txtNumber" Style="{StaticResource titleText}" Foreground="#4EB1B6" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" FontSize="70" Margin="70,0,0,40" ToolTip="Broj prisutne djece danas" />
    </Grid>
</UserControl>
